<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/colorPaula">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/tituloprincipal"
        android:textSize="35sp"
        android:layout_marginBottom="20sp"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eventosBtn"
        android:id="@+id/verEventos"
        android:textColor="@android:color/white"
        android:background="@color/colorPaulaComplementario"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/acercade"
        android:textColor="@android:color/white"
        android:id="@+id/acerca_de"
        android:layout_marginTop="5dp"
        android:background="@color/colorPaulaComplementario"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cerrarSesion"
        android:textColor="@android:color/white"
        android:id="@+id/cerrar_sesion"
        android:layout_marginTop="5dp"
        android:background="@color/colorPaulaComplementario"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/salirBtn"
        android:textColor="@android:color/white"
        android:id="@+id/salir"
        android:layout_marginTop="5dp"
        android:background="@color/colorPaulaComplementario"/>
</LinearLayout>